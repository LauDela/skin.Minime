<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2007">
<allowoverlay>yes</allowoverlay>
<controls>
<control type="group"> <!--infos en cours-->
			<visible>Player.ShowInfo + Player.HasAudio</visible>
			
			<control type="image">
					<posx>0</posx>
					<posy>885</posy>
					<width>1920</width>
					<height>200</height>
					<texture border="22">elements/gris01t.png</texture>
			</control>
			<control type="image">
				<description>Music cd art image</description>
				<posx>150</posx>
				<posy>900</posy>
				<width>170</width>
				<height>170</height>
				<fadetime>200</fadetime>
				<texture background="true">$INFO[Skin.String(Music_Folder_Path)]$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album,/,/cdart.png]</texture>
			</control>
			
			<control type="image">
				<description>Music cover image</description>
				<posx>10</posx>
				<posy>890</posy>
				<width>200</width>
				<height>200</height>
				<fadetime>200</fadetime>
				<texture background="true">$INFO[MusicPlayer.cover]</texture>
				<aspectratio  align="left" aligny="top">keep</aspectratio>		
				<bordersize>8</bordersize>
			</control>
			<control type="label">
				<posx>330</posx>
				<posy>910</posy>
				<width>1200</width>
				<label>$INFO[MusicPlayer.Album]$INFO[MusicPlayer.Artist, - ]</label>
				<align>left</align>
				<font>F60</font>
				<textcolor>Orange</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>

			<control type="label">
				<posx>330</posx>
				<posy>980</posy>
				<width>1200</width>
				<label>$INFO[MusicPlayer.Title]</label>
				<scroll>true</scroll>
				<align>left</align>
				<font>F60</font>
				<shadowcolor>black</shadowcolor>
			</control>

			<control type="label">
				<description>Player Times</description>
				<posx>1800</posx>
				<posy>1000</posy>
				<width>500</width>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<align>right</align>
				<font>F30</font>
				<shadowcolor>black</shadowcolor>
			</control>

			<control type="progress">
				<description>Progressbar</description>
				<posx>0</posx>
				<posy>10r</posy>
				<width>1980</width>
				<height>10</height>
				<info>Player.Progress</info>
			</control>
       
		
      
			
      
		</control>

		<!--A SUIVRE-->
			<control type="group">
					<visible>Player.ShowInfo + MusicPlayer.HasNext</visible>
					<animation type="Conditional" reversible="false" condition="MusicPlayer.HasNext" loop="true">
						<effect type="slide" start="-800,0" end="0,0" time="500" delay="35000" />
						<effect type="slide" start="0,0" end="-800,0" time="500" delay="41000" />
					</animation>
					 <posx>120</posx>
                     <posy>780</posy>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>620</width>
						<height>100</height>
						<texture border="22">elements/gris01t.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>5</width>
						<height>100</height>
						<texture>orange.png</texture>
					</control>
					<control type="image">
						<posx>20</posx>
						<posy>20</posy>
						<width>60</width>
						<height>60</height>
						<texture>icons/droite.png</texture>
					</control>
					<control type="image">
						<description>Music cover image</description>
						<posx>80</posx>
						<posy>8</posy>
						<width>80</width>
						<height>80</height>
						<fadetime>200</fadetime>
						<texture background="true" diffuse="other_textures/cover_matte.png">$INFO[MusicPlayer.offset(1).Cover]</texture>
				</control>
					<control type="label">
						<description>Now Playing Info</description>
						<posx>170</posx>
						<posy>0</posy>
						<width>500</width>
						<font>F20</font>
						<label>A suivre [COLOR Accent]$INFO[MusicPlayer.offset(1).Artist,,][/COLOR]</label>
						<shadowcolor>black</shadowcolor>
						<scroll>true</scroll>
				</control>
				<control type="label">
					<description>Now Playing Info</description>
					<posx>170</posx>
					<posy>25</posy>
					<width>500</width>
					<font>F20</font>
					<label>$INFO[MusicPlayer.offset(1).TrackNumber]-$INFO[MusicPlayer.offset(1).Title]</label>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
				</control>
        
				<control type="label">
					<description>Now Playing Info</description>
					<posx>170</posx>
					<posy>52</posy>
					<width>500</width>
					<font>F20</font>
					<label>$INFO[MusicPlayer.Album] ($INFO[MusicPlayer.Year])</label>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
				</control>
					
			</control>
			<!--FIN A SUIVRE-->
			
			
			
			<!--INFO PHOTO -- music info-->	
			<control type="group">
				<posx>1520</posx>
				<posy>780</posy>
				
				<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>620</width>
						<height>100</height>
						<texture border="22">elements/gris01t.png</texture>
					</control>
					
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>5</width>
						<height>100</height>
						<texture>orange.png</texture>
					</control>
					
				<control type="label">
					<description>Date de la photo</description>
					<posx>250</posx>
					<posy>20</posy>
					<width>360</width>
					<height>18</height>
					<aligny>center</aligny>
					<align>right</align>
					<font>F20</font>
					<textcolor>white</textcolor>
					<label>[B]$INFO[Slideshow.EXIFDate][/B]</label>
				</control>
				<control type="label">
					<description>Mode d'exposition</description>
					<posx>250</posx>
					<posy>40</posy>
					<width>360</width>
					<height>18</height>
					<aligny>center</aligny>
					<align>right</align>
					<font>F20</font>
					<textcolor>white</textcolor>
					<label>[B]$INFO[Slideshow.ExposureMode][/B]</label>
				</control>
				<control type="label">
					<description>Mode d'exposition</description>
					<posx>250</posx>
					<posy>60</posy>
					<width>360</width>
					<height>18</height>
					<aligny>center</aligny>
					<align>right</align>
					<font>F20</font>
					<textcolor>white</textcolor>
					<label>[B]$INFO[Slideshow.DigitalZoom][/B]</label>
				</control>
				 <control type="image">
					<description>Logo marque</description>
					<posx>-80</posx>
					<posy>10</posy>
					<height>30</height>
					<texture>other_textures/camera/$INFO[slideshow.cameramake].png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image">
				    <description>Logo modele</description>
				    <posx>-20</posx>
				    <posy>50</posy>
				    <height>30</height>
					<texture>other_textures/camera/$INFO[slideshow.cameramodel].png</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>	
	</controls>		  
</window>
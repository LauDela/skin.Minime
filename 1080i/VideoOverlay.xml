<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2904">
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="group">
			<posx>0</posx>
			<posy>1020</posy>

			<control type="group">

				<visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration)</visible>

				<control type="image">
					<posx>0</posx>
					<posy>10</posy>
					<width>1920</width>
					<height>68</height>
					<texture border="22">elements/gris01.png</texture>
				</control>

				<control type="label">
					<description>Now Playing Info</description>
					<posx>20</posx>
					<posy>10</posy>
					<width>1220</width>
					<label>[COLOR Accent]$LOCALIZE[13350][/COLOR] $INFO[VideoPlayer.TVShowTitle,, - ]$INFO[VideoPlayer.Title]</label>
					<scroll>true</scroll>
				</control>

			</control>

			

		</control>

	</controls>

</window>
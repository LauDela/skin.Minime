						<width>90</width>
						<height>90</height>
						<aspectratio>keep</aspectratio>
						<visible>!Control.HasFocus(506)</visible>
						<texture>$INFO[ListItem.Property(foo2)]</texture>
					</control>

					<control type="label">
						<posx>55</posx>
						<posy>60</posy>
						<height>50</height>
					    <width>200</width>
					    <font>Medium</font>

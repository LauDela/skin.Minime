<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype_Songs">
                  <control type="image">
                        <posx>620</posx>
                        <posy>288</posy>
                        <width>884</width>
                        <height>628</height>
                        <texture border="5">elements/blanc.png</texture>
                        <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(503)">Conditional</animation>
                        <visible>!Control.IsVisible(504) + [Window.IsActive(musiclibrary) + [Container.Content(songs) | Container.Content(playlists) | Container.Content(files)]] | Window.IsActive(musicplaylist)</visible>
                   </control>

        <control type="group">
            <visible>Control.IsVisible(503)</visible>
            <control type="list" id="503">
                <posx>620</posx>
                <posy>288</posy>
                <width>884</width>
                <height>620</height>
                <onup>503</onup>
                <ondown>503</ondown>
                <onright>1</onright>
                <onleft>9000</onleft>
                <onright>IncreaseRating</onright>
                <scrolltime>0</scrolltime>
                <viewtype label="Song View">Song View</viewtype>
                <orientation>vertical</orientation>
                <focusposition>4</focusposition>
                <pagecontrol>63</pagecontrol>
                <visible>[Window.IsActive(musiclibrary) + [Container.Content(songs) | Container.Content(playlists) | Container.Content(files)]] | Window.IsActive(musicplaylist)</visible>
                <itemlayout height="45">
                    <control type="label">
                        <posx>22</posx>
                        <width>45</width>
                        <align>center</align>
                        <label>$INFO[ListItem.TrackNumber]</label>
                    </control>
                    <control type="label">
                        <posx>65</posx>
                        <width>730</width>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="image">
                        <posx>690</posx>
                        <posy>10</posy>
                        <width>100</width>
                        <height>25</height>
                        <texture>other_textures/colorrating/$INFO[ListItem.StarRating]</texture>
                    </control>
                    <control type="label">
                        <posx>864</posx>
                        <align>right</align>
                        <width>100</width>
                        <label>$INFO[ListItem.Duration]</label>
                    </control>
                     <control type="image">
                        <posx>690</posx>
                        <posy>10</posy>
                        <width>100</width>
                        <height>25</height>
                        <texture>rating/$INFO[ListItem.StarRating]</texture>

                    </control>
                </itemlayout>
                <focusedlayout height="45">
                    <control type="image">
                        <width>884</width>
                        <height>45</height>
                        <texture border="5">orange.png</texture>
                        <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(503)">Conditional</animation>
                    </control>
                    <control type="image">
                        <width>45</width>
                        <height>45</height>
                        <texture border="5">tile.png</texture>
                        <animation type="Focus" reversible="false">
                            <effect type="fade" start="60" end="100" time="400" />
                        </animation>
                    </control>
                    <control type="label">
                        <posx>22</posx>
                        <width>45</width>
                        <align>center</align>
                        <label>[B]$INFO[ListItem.TrackNumber][/B]</label>
                    </control>
                    <control type="label">
                        <posx>65</posx>
                        <width>730</width>
                        <label>[COLOR White][B]$INFO[ListItem.Title][/B][/COLOR]</label>
                    </control>
                    <control type="image">
                        <posx>690</posx>
                        <posy>10</posy>
                        <width>100</width>
                        <height>25</height>
                        <texture>rating/$INFO[ListItem.StarRating]</texture>
                        
                    </control>
                    <control type="label">
                        <posx>864</posx>
                        <align>right</align>
                        <width>100</width>
                        <label>[COLOR White][B]$INFO[ListItem.Duration][/B][/COLOR]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="63">
                <posx>1274</posx>
                <posy>288</posy>
                <width>6</width>
                <height>315</height>
                <texturesliderbackground></texturesliderbackground>
                <textureslidernib>bar.png</textureslidernib>
                <textureslidernibfocus>scroll_nib.png</textureslidernibfocus>
                <texturesliderbar></texturesliderbar>
                <texturesliderbarfocus></texturesliderbarfocus>
                <showonepage>true</showonepage>
                <orientation>vertical</orientation>
            </control>
            <control type="label">
                <posx>300</posx>
                <posy>620</posy>
                <width>300</width>
                <align>left</align>
                <aligny>top</aligny>
                <label>[LOWERCASE]tri[/LOWERCASE]: [COLOR Accent][LOWERCASE]$INFO[Container.SortMethod][/LOWERCASE][/COLOR] </label>
                <font>F30</font>
                <textcolor>White</textcolor>
                <visible>Window.IsActive(1) | Container.Content(Songs)</visible>
            </control>
            <control type="fadelabel">
                <label>[COLOR Accent]$INFO[ListItem.Album][/COLOR] $INFO[ListItem.Year]</label>
                <posx>300</posx>
                <posy>171</posy>
                <height>30</height>
                <width>885</width>
                <font>F60</font>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <pauseatend>600</pauseatend>
                <scrollspeed>50</scrollspeed>
                <aligny>top</aligny>
                <visible>Container.Content(Songs)</visible>
            </control>
            <control type="label">
                <posx>300</posx>
                <posy>230</posy>
                <width>600</width>
                <height>50</height>
                <aligny>center</aligny>
                <font>F30</font>
                <textcolor>White</textcolor>
                <label>[COLOR Accent]$INFO[ListItem.Artist,[COLOR White][LOWERCASE]$LOCALIZE[557][/LOWERCASE]: [/COLOR]][/COLOR]</label>
                <visible>Container.Content(Songs)</visible>
            </control>
            <control type="image">
                <posx>300</posx>
                <posy>288</posy>
                <width>315</width>
                <height>315</height>
                <texture>orange.png</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <visible>!StringCompare(ListItem.Album, )</visible>
            </control>
            <control type="image">
                <posx>300</posx>
                <posy>288</posy>
                <width>315</width>
                <height>315</height>
                <texture>$INFO[ListItem.Icon]</texture>
                <fadetime>200</fadetime>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <visible>true</visible>
                <bordersize>4</bordersize>
            </control>
        </control>
    </include>
</includes>
                      <textcolor>FF999999</textcolor>
				           </control>
        <control type="image">
                      <posx>35</posx>
                      <posy>5</posy>
                      <width>90</width>
                      <height>90</height>
                      <aspectratio>keep</aspectratio>
                      <texture>$INFO[ListItem.Thumb]</texture>
                  </control>
        <control type="image">
                        <posx>-40</posx>
                        <posy></posy>
                        <width>200</width>
                        <height>1</height>
                        <texture>gris.png</texture>
                    </control>

			</itemlayout>

			<focusedlayout width="200" height="120">

<control type="image">
                      <posx>40</posx>
                      <posy>0</posy>
                      <width>90</width>
                      <height>90</height>
                      <aspectratio>keep</aspectratio>

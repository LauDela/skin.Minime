  <animation effect="slide" start="-70,0" time="180" tween="cubic" easing="out">Focus</animation>
<control type="image">
					<posx>0</posx>
					<posy>350</posy>
					<width>1280</width>
					<height>170</height>
					<texture>elements/gris02.png</texture>
         
					<aspectratio>scale</aspectratio>
			</control>
	<control type="wraplist" id="302">

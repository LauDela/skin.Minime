                       <height>50</height>
					             <width>200</width>
					             <font>Medium</font>
					             <info>ListItem.Label</info>
					             <align>center</align>
                       <visible>!Control.HasFocus(302)</visible>
                      <textcolor>FF999999</textcolor>
				           </control>

    	</focusedlayout>
      	<content>
				<item id="1">

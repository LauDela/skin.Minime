<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2903">
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="group">
			<posx>770</posx>
			<posy>100</posy>
			<visible>!Window.IsActive(home)+![Container.Content(songs)]</visible>
			
			<control type="group"> <!-- visualisation-->
				<visible>!Window.IsActive(visualisation) + !Window.IsActive(karaoke)+ !Window.IsActive(slideshow)</visible>
				
				<control type="image">
					<posx>-20</posx>
					<posy>0</posy>
					<width>530</width>
					<height>170</height>
					<texture border="22">elements/gris01t.png</texture>
				</control>
				
				<control type="image">
				          <description>Music cover image</description>
				          <posx>10</posx>
				          <posy>40</posy>
				          <width>120</width>
				          <height>120</height>
				          <fadetime>200</fadetime>
				          <texture background="true" diffuse="other_textures/cover_matte.png">$INFO[MusicPlayer.cover]</texture>
				</control>
				
				<control type="label">
					<description>Now Playing Info</description>
					<posx>10</posx>
					<posy>0</posy>
					<width>500</width>
					<label>[COLOR Accent]$INFO[MusicPlayer.Artist,,][/COLOR]</label>
					<scroll>true</scroll>
				</control>
				
        
				<control type="label">
					<description>Now Playing Info</description>
					<posx>150</posx>
					<posy>25</posy>
					<width>350</width>
					<label>$INFO[MusicPlayer.TrackNumber]-$INFO[MusicPlayer.Title]</label>
					<scroll>true</scroll>
				</control>
        
				<control type="label">
					<description>Now Playing Info</description>
					<posx>150</posx>
					<posy>52</posy>
					<width>350</width>
					<label>$INFO[MusicPlayer.Album] ($INFO[MusicPlayer.Year])</label>
					<scroll>true</scroll>
				</control>
				
				<control type="group">
					<control type="progress">
						<description>Progressbar</description>
						<posx>10</posx>
						<posy>160</posy>
						<width>530</width>
						<height>5</height>
						<info>Player.Progress</info>
						<texturebg>progressmidgreen.png</texturebg>
						<midtexture>orangepp.png</midtexture>
					</control>
                
					<control type="label">
						<description>Player Times</description>
						<posx>100</posx>
						<posy>100</posy>
						<width>400</width>
						<label>[COLOR Accent]$INFO[Player.Time][/COLOR] / $INFO[Player.Duration]</label>
						<align>center</align>
						<font>F50</font>
						<textcolor>white</textcolor>
					</control>
				</control>
			</control>
		</control>



		


		<control type="group"> <!--songs-->
			<posx>95</posx>
			<posy>610</posy>
			<visible>[Container.Content(songs)]</visible>
			<control type="group">
				<visible>!Window.IsActive(visualisation) + !Window.IsActive(karaoke)</visible>
				<control type="image">
					<posx>-20</posx>
					<posy>0</posy>
					<width>1210</width>
					<height>105</height>
					<texture border="22">elements/gris01.png</texture>
				</control>
				<control type="image">
				     <description>Music cover image</description>
				     <posx>10</posx>
				     <posy>10</posy>
				     <width>80</width>
				     <height>80</height>
				     <fadetime>200</fadetime>
				     <texture background="true">$INFO[MusicPlayer.cover]</texture>
				</control>
				
				<control type="label">
					<description>Now Playing Info</description>
					<posx>100</posx>
					<posy>0</posy>
					<width>1200</width>
					<label>[COLOR Accent]$INFO[MusicPlayer.Artist,,][/COLOR]</label>
					<scroll>true</scroll>
				</control>
        
				<control type="label">
					<description>Now Playing Info</description>
					<posx>100</posx>
					<posy>25</posy>
					<width>1200</width>
					<label>$INFO[MusicPlayer.TrackNumber]-$INFO[MusicPlayer.Title]</label>
					<scroll>true</scroll>
				</control>
        
				<control type="label">
					<description>Now Playing Info</description>
					<posx>100</posx>
					<posy>52</posy>
					<width>1200</width>
					<label>$INFO[MusicPlayer.Album] ($INFO[MusicPlayer.Year])</label>
					<scroll>true</scroll>
				</control>
				
				<control type="group">
					<control type="progress">
						<description>Progressbar</description>
						<posx>10</posx>
						<posy>90</posy>
						<width>1200</width>
						<height>5</height>
						<info>Player.Progress</info>
						<texturebg>progressmidgreen.png</texturebg>
						<midtexture>orangepp.png</midtexture>
					</control>
				</control>
			</control>
		</control>
	</controls>

</window>